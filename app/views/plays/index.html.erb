<h1>Recent Plays â€” <%= @program %></h1>
<% if @plays.empty? %>
  <p>No plays found for "<%= @program %>".</p>
  <% if @available_programs.any? %>
    <p>Available programs in your DB right now:</p>
    <ul>
      <% @available_programs.each do |pname| %>
        <li><a href="<%= plays_path(program: pname) %>"><%= pname %></a></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Song</th>
      <th>Artist</th>
      <th>Album</th>
    </tr>
  </thead>
  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.played_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= play.song %></td>
        <td><%= play.artist %></td>
        <td><%= play.album %></td>
      </tr>
    <% end %>
  </tbody>
</table>
